{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "pretty": true,
        "declaration": false,
       // "declarationDir": "build/declarations",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noExternalResolve": true,
        "sourceMap": true,
        "sortOutput": true,
        "outFile": "build/js/main.js",
        "outDir": "build/js",
        "newLine": "LF",
        "noImplicitUseStrict": false
    },
    "filesGlob": [
        "src/**/*.ts",
        "!build/*"
    ],
    "compileOnSave": true
}
