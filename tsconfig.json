{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "pretty": true,
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noExternalResolve": true,
        "sourceMap": true,
        "sortOutput": true,
        "out": "bfi.js"
    },
    "filesGlob": [
        "src/**/*.ts",
        "!build/*"
    ],
    "compileOnSave": true
}